<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_zhbaidumap/models/rules"
>
        <fieldset name="details">
                <field
                        name="id"
                        type="hidden"
                />
                <field
                        name="title"
                        type="text"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_TITLE_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_TITLE_DESC"
                        size="60"
                        class="inputbox span10"
                        required="true"
                        default=""
                />
                <field
                        name="description"
                        type="text"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_DESCRIPTION_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_DESCRIPTION_DESC"
                        size="100"
                        class="inputbox span10"
                        required="false"
                        default=""
                />
                <field
                        name="published"
                        type="radio"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_PUBLISHED_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_PUBLISHED_DESC"
                        size="30"
                        required="true"
                        default="1"
                        class="btn-group"
                    >
                        <option	value="0">JNO</option>
                        <option	value="1">JYES</option>
                </field>
                <field
                        name="icontype"
                        type="imagelist"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONTYPE_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONTYPE_DESC"
                        directory="administrator/components/com_zhbaidumap/assets/icons"
                        size="1"
                        class="inputbox span5"
                        required="true"
                        exclude="" 
                        stripext="true"
                        hide_none="true"
                        hide_default="true"
                        default=""
                />
                <field
                        name="iconofsetx"
                        type="text"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONOFSETX_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONOFSETX_DESC"
                        size="10"
                        class="inputbox"
                        required="true"
                        default="0"
                />
                <field
                        name="iconofsety"
                        type="text"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONOFSETY_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ICONOFSETY_DESC"
                        size="10"
                        class="inputbox"
                        required="true"
                        default="0"
                />
                <field
                        name="overridemarkericon"
                        type="radio"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_OVERRIDEMARKERICON_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_OVERRIDEMARKERICON_DESC"
                        size="30"
                        required="true"
                        default="0"
                        class="btn-group"
                    >
                        <option	value="0">JNO</option>
                        <option	value="1">JYES</option>
                </field>
                <field
                        name="overridegroupicon"
                        type="radio"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_OVERRIDEICON_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_OVERRIDEICON_DESC"
                        size="30"
                        required="true"
                        default="0"
                        class="btn-group"
                    >
                        <option	value="0">JNO</option>
                        <option	value="1">JYES</option>
                </field>
                <field
                        name="activeincluster"
                        type="radio"
                        label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ACTIVEINCLUSTER_LABEL"
                        description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_ACTIVEINCLUSTER_DESC"
                        size="30"
                        required="true"
                        default="0"
                        class="btn-group"
                    >
                        <option	value="0">JNO</option>
                        <option	value="1">JYES</option>
                </field>
		<field
			name="catid"
			type="category"
			extension="com_zhbaidumap"
			class="inputbox span5"
			default=""
			label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_CATEGORY_LABEL"
			description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_CATEGORY_DESC"
			required="false"
                    >
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		
		<field 
			name="ordering" 
			type="orderinggroup" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
		/>
		<field
			name="userorder"
			type="text"
			label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_USERORDER_LABEL"
			description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_USERORDER_DESC"
			size="10"
			class="inputbox"
			required="false"
			default="0"
		/>		
        </fieldset>
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_SHOW_CATEGORY_LABEL"
				description="COM_ZHBAIDUMAP_MAPMARKERGROUP_DETAIL_SHOW_CATEGORY_DESC"
				default=""
				class="lst-dropdown-sinlge"
                            >
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>

</form>
