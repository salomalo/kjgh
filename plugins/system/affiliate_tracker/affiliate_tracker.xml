<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
  <name>System - Affiliate Tracker</name>
  <author>JoomlaThat!</author>
  <creationDate>April 2018</creationDate>
  <copyright>Copyright (C) 2013-2018 JoomlaThat. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>support@joomlathat.com</authorEmail>
  <authorUrl>www.joomlathat.com</authorUrl>
  <version>2.0.3</version>
  <description>Saves Affiliate ID data</description>
  <files>
    <filename plugin="affiliate_tracker">affiliate_tracker.php</filename>

  </files>
  <languages>
    <language tag="en-GB">en-GB.plg_system_affiliate_tracker.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset
				name="basic"
				label="General"
				description="Affiliate Tracker global settings"
				>

		<field name="days" type="text" default="30" size="5" label="Cookie lifetime in days" description="Cookie life" />

      </fieldset>
    </fields>
  </config>
  <updateservers>
    <server type="extension" priority="1" name="Affiliate Tracker Plugin Updates">http://www.joomlathat.com/updates/ATpluginupdate.xml</server>
  </updateservers>
</extension>
