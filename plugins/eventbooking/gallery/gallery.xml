<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="eventbooking" method="upgrade">
	<name>Events Booking - Gallery</name>
	<author>Tuan Pham Ngoc</author>
	<creationDate>July 20178</creationDate>
	<copyright>Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>services@joomdonation.com</authorEmail>
	<authorUrl>www.joomdonation.com</authorUrl>
	<version>3.10.4</version>  
	<description>This plugin allow adding and displaying gallery for an event.</description>
	<files>
		<filename plugin="gallery">gallery.php</filename>
		<folder>form</folder>
	</files>		
	<config>
        <fields name="params">
			<fieldset name="basic">						
				<field
					name="thumb_width"
					type="text"
					label="Thumb width"
					default="150"					
				/>
				<field
					name="thumb_height"
					type="text"
					label="Thumb height"					
					default="150"					
				/>
				<field name="output_position" type="list" label="Output Position"
					   description="Choose output position for the plugin on event details page" default="before_register_buttons">
					<option value="before_register_buttons">Before register buttons - displays in horizontal</option>
					<option value="after_register_buttons">After register buttons - displays in tabs(</option>
				</field>
			</fieldset>
        </fields>
    </config>		
</extension>
