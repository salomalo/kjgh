	<version>3.0.0</version>
	<isconsumer>true</isconsumer>
	<description>PLG_TECHJOOMLA_HOTMAIL_API_DESC</description>
	<files>
		<file plugin="plug_techjoomlaAPI_hotmail">plug_techjoomlaAPI_hotmail.php</file>
		<folder>plug_techjoomlaAPI_hotmail</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_techjoomlaAPI_plug_techjoomlaAPI_hotmail.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_techjoomlaAPI_plug_techjoomlaAPI_hotmail.sys.ini</language>
	</languages>
	<config name="params">
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/techjoomlaAPI/plug_techjoomlaAPI_hotmail/plug_techjoomlaAPI_hotmail/element/pathapi">
				<field name="pathapi_hotmail" type="pathapi" label="PLG_TECHJOOMLA_HOTMAIL_API_LINK_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_LINK_DESC" />
				<field name="appKey" type="text" default="" label="PLG_TECHJOOMLA_HOTMAIL_API_CLIENT_ID_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_CLIENT_ID_DESC" />
				<field name="appSecret" type="text" default="" label="PLG_TECHJOOMLA_HOTMAIL_API_CLIENT_SECRET_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_CLIENT_SECRET_DESC" />
				<field name="no_allowed_invites" type="text" default="10" label="PLG_TECHJOOMLA_HOTMAIL_API_LIMIT_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_LIMIT_DESC" />
				<field name="log_file_path" type="hidden" default="" label="PLG_TECHJOOMLA_HOTMAIL_API_LOG_FILE_PATH_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_LOG_FILE_PATH_DESC" />
				<field name="broadcast_limit" type="text" default="5" label="PLG_TECHJOOMLA_HOTMAIL_API_BROADCAST_LIMIT_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_BROADCAST_LIMIT_DESC" />
				<field name="throttle_limit" type="hidden" default="" label="PLG_TECHJOOMLA_HOTMAIL_API_THROTTLE_LIMIT_LBL" description="PLG_TECHJOOMLA_HOTMAIL_API_THROTTLE_LIMIT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
