<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Statics Style 1</title>
	<sampledata></sampledata>
	
	<fields name="statics-intro">
		<fieldset name="basic" label="STATICS_BASIC_LABEL" description="STATICS_BASIC_DESC">
			<field name="columns" type="list" label="STATICS_COLUMNS_LABEL" description="STATICS_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="6">6</option>
			</field>
		</fieldset>
			
		<fieldset name="section-statics" label="STATICS_SECTION_LABEL" description="STATICS_SECTION_DESC" multiple="1">
			<field name="number" type="text" default="" size="40" label="STATICS_NUMBER_LABEL" description="STATICS_NUMBER_DESC" required="1" />
			<field name="title" type="text" default="" size="40" label="STATICS_TITLE_LABEL" description="STATICS_TITLE_DESC" required="1" />
			<field name="link" type="text" default="" label="STATICS_LINK_LABEL" description="STATICS_LINK_DESC" rows="5" cols="40" />
		</fieldset>
  </fields>
</form>