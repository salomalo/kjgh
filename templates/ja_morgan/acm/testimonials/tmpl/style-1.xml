<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Testimonial Style 1</title>
	<sampledata></sampledata>
	<fields name="testimonial-intro">
		<fieldset name="basic" label="TESTIMONIAL_BASIC_LABEL" description="TESTIMONIAL_BASIC_DESC">
			<field name="block-title" type="textarea" default="" rows="5" cols="40"  label="BLOCK_TITLE_LABEL" description="BLOCK_TITLE_DESC" />
			
			<field name="columns" type="list" label="TESTIMONIAL_COLUMNS_LABEL" description="TESTIMONIAL_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="6">6</option>
			</field>
			<field name="btn-title" type="text" default="" label="TESTIMONIAL_BUTTON_LABEL" description="TESTIMONIAL_BUTTON_DESC" rows="5" cols="40" />
			<field name="btn-link" type="text" default="" size="40" label="TESTIMONIAL_BUTTOM_LINK_LABEL" description="TESTIMONIAL_BUTTOM_LINK_DESC"  />
		</fieldset>
	
		<fieldset name="section-features" label="TESTIMONIAL_SECTION_LABEL" description="TESTIMONIAL_SECTION_DESC">
			<field name="data" type="jalist" >
				<item name="img" type="media" default="" label="TESTIMONIAL_IMAGE_LABEL" description="TESTIMONIAL_IMAGE_LABEL_DESC" required="1"  />
				<item name="label" type="textarea" default="" label="TESTIMONIAL_LABEL_LABEL" description="TESTIMONIAL_LABEL_DESC" rows="5" cols="40" />
				<item name="title" type="text" default="" size="40" label="TESTIMONIAL_TITLE_LABEL" description="TESTIMONIAL_TITLE_DESC" required="1" />
				<item name="desc" type="text" default="" size="40" label="TESTIMONIAL_DESCRIPTION_LABEL" description="TESTIMONIAL_DESCRIPTION_DESC" />
				<item name="link" type="text" default="" size="40" label="TESTIMONIAL_LINK_LABEL" description="TESTIMONIAL_LINK_DESC" />
			</field>

		</fieldset>
		
  </fields>
</form>