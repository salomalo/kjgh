<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 5</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="ft-bg" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_DESC" />

			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />
		</fieldset>

		<fieldset name="action" label="FEATURES_ACTION_LABEL" description="FEATURES_ACTION_DESC">
			<field name="btn-title" type="text" default="" label="FEATURES_BUTTON_LABEL" description="FEATURES_BUTTON_DESC" rows="5" cols="40" />
			<field name="btn-link" type="text" default="" size="40" label="FEATURES_BUTTOM_LINK_LABEL" description="FEATURES_BUTTOM_LINK_DESC"  />
			<field name="btn-type" type="list" default="default" size="40" label="FEATURES_BUTTOM_TYPE_LABEL" description="FEATURES_BUTTOM_TYPE_DESC">
				<option value="default">Default</option>
				<option value="primary">Primary</option>
				<option value="success">Success</option>
				<option value="warning">Warning</option>
				<option value="danger">Danger</option>
				<option value="info">Info</option>
			</field>
		</fieldset>
  </fields>
</form>