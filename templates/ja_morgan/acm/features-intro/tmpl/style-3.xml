<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 6</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" filter="raw"/>


			<field name="align" type="list" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="0">Left</option>
				<option value="1">Right</option>
			</field>

			<field name="img-features" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_DESC" ></field>

			<field name="position" type="moduleposition"
        description="FEATURES_POSITION_DESC"
        label="FEATURES_POSITION_LABEL"
        default=""
        maxlength="50" />

			<field name="btn-title" type="text" default="" label="FEATURES_BUTTON_TITLE_LABEL" description="FEATURES_BUTTON_TITLE_DESC" />

			<field name="btn-link" type="text" default="" label="FEATURES_BUTTON_LINK_LABEL" description="FEATURES_BUTTON_LINK_DESC" />
			<field name="id-video" type="text" default="" label="FEATURES_ID_VIDEO_LABEL" description="FEATURES_ID_VIDEO_DESC" rows="5" cols="40" />
		</fieldset>
  </fields>
</form>