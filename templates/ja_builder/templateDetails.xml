	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>
	<![CDATA[
		<div align="left" style="background-color: #dff0d8; border: 1px solid #d6e9c6; border-radius: 2px; color: #3c763d; padding: 20px;">
		
				<h3 style="margin: 0 0 20px; font-size: 24px;">JA Builder Template</h3>
				
				<p><strong>JA Builder</strong> is dedicated builder tool for Joomla! CMS to build pages, landing pages, layouts based on pre-made content blocks and powerful options to help any user handle all the website development work with ease. Newbies will have fun learning and developers would love it.</p>
			
				<p>Access Extensions Â» Templates and set <strong>JA Builder</strong> template style as default template style.</p>
				
				<div class="btn-actions">
					<a href="//www.joomlart.com/documentation/joomla-templates/ja-builder" title="Document" class="primary">Document</a>
					<a href="https://www.joomlart.com/forums/forum/joomlart-public-forums/ja-site-builder/" title="Forum">Forum</a>
					<a href="http://demo.builder.joomlart.com/" title="Demo">Demo</a>
					<a href="https://www.joomlart.com/ja-builder" title="More info">More info...</a>
				</div>
				
				<p style="font-size: 12px;">Copyright 2004 - 2018 <a href='//www.joomlart.com/' title='Visit Joomlart.com!'>JoomlArt.com</a>.</p>
      
				<p>This extension collects anonymous data comprising server and joomla environment. <a href="https://www.joomlart.com/documentation/joomla-templates/ja-builder#collect-data" target="_blank">Details click here</a></p>
	  				
				<style>
			  .btn-actions {margin: 30px 0;}
			  .btn-actions a {background: #fff; border: 1px solid #ddd; border-radius: 2px; color: #666; box-shadow: 0 -2px 0 rgba(0,0,0,0.1) inset; font-size: 16px; letter-spacing: 0.5px; padding: 8px 20px 9px; margin: 0 5px 0 0; text-decoration: none; transition: all 0.35s;}
			  .btn-actions a.primary {background-color: #2e7d32; border-color: #2e7d32; color: #fff;}
			  .btn-actions a:hover, .btn-actions a:focus {background: #01579b; border-color: #01579b; color: #fff;}
			  </style>		
		</div>
		]]>
		</description>
		
		<updateservers>
    <server type="extension">http://update.joomlart.com/service/tracking/j31/ja_builder.xml</server>
    </updateservers>
	
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>admin</folder>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
		<folder>vendors</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>header</position>
		<position>sidebar</position>
		<position>languageswitcherload</position>
		<position>quickcontact</position>
		<position>mainnav</position>
		<position>search</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ja_builder.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_ja_builder.sys.ini</language>
	</languages>
	<config>
		<fields name="params" addfieldpath="/templates/ja_builder/admin/field">
			<fieldset name="advanced">
				<field name="jub-layout" type="hidden" />				
			</fieldset>
			<fieldset name="custom">
				<field
					name="custom-code-head-top"
					type="textarea"
					default=""
					label="TPL_JA_BUILDER_CUSTOM_HEAD_TOP_LABEL"
					description="TPL_JA_BUILDER_CUSTOM_HEAD_TOP_DESC"
					cols="80"
					rows="10"
					class="input-xxlarge"
					filter="raw"
				/>				
				<field
					name="custom-code-head-bot"
					type="textarea"
					default=""
					label="TPL_JA_BUILDER_CUSTOM_HEAD_BOT_LABEL"
					description="TPL_JA_BUILDER_CUSTOM_HEAD_BOT_DESC"
					cols="80"
					rows="10"
					class="input-xxlarge"
					filter="raw"
				/>				
				<field
					name="custom-code-body-top"
					type="textarea"
					default=""
					label="TPL_JA_BUILDER_CUSTOM_BODY_TOP_LABEL"
					description="TPL_JA_BUILDER_CUSTOM_BODY_TOP_DESC"
					cols="80"
					rows="10"
					class="input-xxlarge"
					filter="raw"
				/>				
				<field
					name="custom-code-body-bot"
					type="textarea"
					default=""
					label="TPL_JA_BUILDER_CUSTOM_BODY_BOT_LABEL"
					description="TPL_JA_BUILDER_CUSTOM_BODY_BOT_DESC"
					cols="80"
					rows="10"
					class="input-xxlarge"
					filter="raw"
				/>				
			</fieldset>
		</fields>
	</config>
</extension>
