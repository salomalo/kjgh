<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 1</title>
	<sampledata></sampledata>
	<fields name="features-intro">	
		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC">
			<field name="data" type="jalist" >
				<item name="img" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_LABEL_DESC"  />
				<item name="avatar" type="media" default="" size="40" label="FEATURES_AVATAR_LABEL" description="FEATURES_AVATAR_DESC" />
				<item name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" required="1"/>
				<item name="author" type="text" default="" label="FEATURES_NAME_LABEL" description="FEATURES_NAME_DESC" />
				<item name="author-position" type="text" default="" label="FEATURES_OTHER_INFO_LABEL" description="FEATURES_OTHER_INFO_DESC" />
			</field>
		</fieldset>
  </fields>
</form>